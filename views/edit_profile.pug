.container
  .profile1
    form.edit_profile_form(action='#' method='post')
      .row
        .col-5.edit_profile_col1
          p.heading2
            i.fa.fa-user
            | First Name
          .box
            input#first_name.input(type='text' name='first_name' placeholder='Enter your First Name' value=user.first_name)
          p.heading2
            i.fa.fa-phone
            | Contact Number
          .box
            input#phone_number.input(type='text' name='phone_number' placeholder='Enter your Contact Number' value=user.phone_number)
          p.heading2
            i.fa.fa-user
            | User Name
          .box
            input#user_name.input(type='text' name='user_name' placeholder='Enter your User Name',value=user.user_name)
          p.heading2
            i.fa.fa-university
            | University Name
          .box
            input#unversity_name.input(type='text' name='university_name' placeholder='Enter your University Name')
        .col-5.edit_profile_col2
          p.heading2
            i.fa.fa-user
            | Last Name
          .box
            input#last_name.input(type='text' name='last_name' placeholder='Enter your Last Name' value=user.last_name)
          p.heading2
            i.fa.fa-envelope
            | Email Address
          .box
            input#email_id.input(type='text' name='email_id' placeholder='Enter your Email ID' value=user.email_id)
          p.heading2
            i.fa.fa-user
            | Age
          .box
            input#age.input(type='number' name='age' placeholder='Enter your Age' value=user.age)
          p.heading2
            i.fa.fa-user
            | Occupation
          .box
            input#occupation.input(type='text' name='occupation' placeholder='Enter your Occupation' value=user.occupation)
      .row
        .col-11.edit_profile_col3
          p.heading2
            i.fa.fa-user
            | Bio
          .box
            input#bio.input(type='text' name='bio' placeholder='Enter your Bio')
      input.btn.btn2(type='submit' value='MAKE CHANGES')
