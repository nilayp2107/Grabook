doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Grabook.com
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap' rel='stylesheet')
  link(href='https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Playfair+Display+SC&family=Chakra+Petch' rel='stylesheet')
  link(rel='stylesheet' href='/static/css/books_bought.css')
  link(rel='stylesheet' href='/static/css/home.css')
.navbar
  a.logo(href='') 
    img(src='/static/images/logo.png')
  span.menu
    span.home-title
      a(href='/') Home
    span.buy-title
      a(href='/grab_book') Grab A Book
    span.sell-title
      a(href='/book_upload') Sell
  .login
    if user
      .dropdown
        button.dropbtn
          img.rounded-circle(src=user.profile_pic alt="Couldn't load" width='30px' height='30px')
          i.fa.fa-caret-down(style='padding-left:20px; margin: 0; bottom: 10px;')
        .dropdown-content
          a(href='/profile') Profile
          a(href='/books_in_ad') Books Posted
          a(href='/books_sold') Books Sold
          a(href='/books_bought') Books Bought
          a(href='/wishlist') Wishlist
          a(href='/logout') Logout 
    else     
      .login-button
        a(href='/signin') 
          .text Get Started
.container
  h6(style="color:black") Books in your Wishlist !
  each book in books
    a.card(href='/book?id='+book.book_id)
      img.book_img(src=book.image_1 height='250px' width='300px')
      .details
        p.details_price(name='price') #{book.price} Rs.
        p.details_title(name='title') #{book.title}
        p.details_year_of_publication(name='year_of_publication') Year of Publication: #{book.year_of_publication}
        p.details_author(name='author') Author : #{book.author}
